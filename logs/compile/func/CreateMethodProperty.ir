def CreateMethodProperty(
  O: Object,
  P: Symbol | String,
  V: ESValue,
): Const[~unused~] {
  assert (&& (? O: "OrdinaryObject") O.Extensible)
  let newDesc = (new PropertyDescriptor("Value" -> V, "Writable" -> true, "Enumerable" -> false, "Configurable" -> true))[#42]
  method-call %0 = O->DefineOwnProperty(P, newDesc)
  [! %0]
  return ~unused~
}